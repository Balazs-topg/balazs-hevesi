---
import Wrapper from "../layouts/Wrapper.astro";
---

<!-- <meta charset="UTF-8" /> -->
<Wrapper>
  <div
    class="flex items-center flex-col justify-center h-[calc(100dvh-4rem)] bg-white relative z-20"
  >
    <div class="flex flex-col justify-center font-extrabold">
      <div class="text-2xl flex items-end tracking-wide text-zinc-800">
        <div class="font-black">👋 Tjena, läget?&#160;</div>
        <div class="font-bold text-xl text-zinc-500">Jag heter</div>
      </div>
      <h1 class="font-black drop-shadow-lg text-7xl">Balazs Hevesi</h1>
      <div class="text-xl text-right text-zinc-500 font-bold">
        och är fullstack-utvecklare
      </div>
    </div>
    <svg
      class="absolute bottom-0 scale-y-[0.3] origin-bottom"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 1440 320"
      ><path
        class="fill-zinc-100"
        fill-opacity="1"
        d="M0,192L60,160C120,128,240,64,360,32C480,0,600,0,720,53.3C840,107,960,213,1080,224C1200,235,1320,149,1380,106.7L1440,64L1440,320L1380,320C1320,320,1200,320,1080,320C960,320,840,320,720,320C600,320,480,320,360,320C240,320,120,320,60,320L0,320Z"
      ></path></svg
    >
  </div>
  <div class="relative z-10 py-28 px-12 bg-zinc-100">
    <h2 class="text-center text-4xl font-black mb-16">Mina projekt</h2>
    <div class="grid grid-cols-2 gap-10 max-w-4xl mx-auto">
      <div>
        <div class="bg-white rounded-lg w-full h-48 shadow-md mb-4"></div>
        <div class="text-lg font-bold ml-2 text-zinc-800">
          React Ripples Continued 🌊
        </div>
      </div>
      <div>
        <div class="bg-white rounded-lg w-full h-48 shadow-md mb-4"></div>
        <div class="text-lg font-bold ml-2 text-zinc-800">
          När Slutar Lektionen ⏳
        </div>
      </div>
      <div>
        <div class="bg-white rounded-lg w-full h-48 shadow-md mb-4"></div>
        <div class="text-lg font-bold ml-2 text-zinc-800">Webbutik 🛍️</div>
      </div>
      <div>
        <div class="bg-white rounded-lg w-full h-48 shadow-md mb-4"></div>
        <div class="text-lg font-bold ml-2 text-zinc-800">
          när-slutar-lektionen.net
        </div>
      </div>
    </div>
  </div>
</Wrapper>
